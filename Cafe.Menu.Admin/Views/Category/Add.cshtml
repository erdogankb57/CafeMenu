@model Cafe.Menu.Entity.Category

<form id="saveForm" method="post" action="/Category/Save">
    @Html.HiddenFor(v=> v.CategoryId)
    <div class="form-group">
        <div class="row">
            <div class="col-lg-3">
                <label for="exampleFormControlInput1">Kategori Adı</label>
            </div>
            <div class="col-lg-9">
                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control", @required = "required" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-lg-12">
                <input type="submit" value="Kaydet" />
            </div>
        </div>
    </div>
</form>