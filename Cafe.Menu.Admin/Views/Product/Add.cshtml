@using Cafe.Menu.Entity
@model Cafe.Menu.Entity.Product

<form id="saveForm" method="post" enctype="multipart/form-data" action="/Product/Save">
    @Html.HiddenFor(v=> v.ProductId)

    <div class="form-group">
        <div class="row">
            <div class="col-lg-3">
                <label for="exampleFormControlInput1">Kategori</label>
            </div>
            <div class="col-lg-9">
                @Html.DropDownListFor(m=> m.CategoryId,(List<SelectListItem>)ViewBag.Categories,"", new { @class = "form-control", @required = "required" })
            </div>
        </div>
    </div>


    <div class="form-group">
        <div class="row">
            <div class="col-lg-3">
                <label for="exampleFormControlInput1">Ürün Adı</label>
            </div>
            <div class="col-lg-9">
                @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control", @required = "required" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-lg-3">
                <label for="exampleFormControlInput1">Resim</label>
            </div>
            <div class="col-lg-9">
                <input type='file' name='FileImage' class="form-control" />
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-lg-3">
                <label for="exampleFormControlInput1">Ürün Fiyatı</label>
            </div>
            <div class="col-lg-9">
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @required = "required" })
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-lg-3">
                <label for="exampleFormControlInput1">Özellikler</label>
            </div>
            <div class="col-lg-9">
                @{
                    int i = 0;
                    foreach (var item in (List<Property>)ViewBag.PropertyListData)
                    {
                        <input type="checkbox" id="Property[@i]" name="Property" value="@item.PropertyId" @(ViewBag.SelectedId!=null && ((List<ProductProperty>)ViewBag.SelectedId).Any(a=> a.PropertyId == item.PropertyId) ? "checked" : "") />
                        <label for="Property[@i]">@item.Key</label>
                        <br />

                        i++;

                    }
                }


            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="row">
            <div class="col-lg-12">
                <input type="submit" value="Kaydet" />
            </div>
        </div>
    </div>
</form>